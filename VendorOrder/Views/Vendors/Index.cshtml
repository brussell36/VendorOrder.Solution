@{
  Layout = "_Layout";
}
<div>
  <nav class="navbar navbar-expand-lg navbar-light">
  <a class="navbar-brand" href="#">Pierre's</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/vendors">Vendors</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Orders</a>
      </li>
  </div>
</div>
<div class="container">
  <div class="jumbotron">
    @using VendorOrder.Models;

    <h1>Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h3>No vendors have been added yet!</h3>
    }

    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a>: @vendor.Description</h3>
    }

    <h5><a href='/vendors/new'>Add a new Vendor</h5>
    <h5><a href='/'>Back home</a></h5>
  </div>
</div>