@{
  Layout = "_Layout";
}
@using VendorOrder.Models;
<div>
  <nav class="navbar navbar-expand-lg navbar-light">
  <a class="navbar-brand" href="#">Pierre's</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/vendors">Vendors</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Orders</a>
      </li>
  </div>
</div>
<div class="container">
  <div class="jumbotron">
    <h3>Here are all the orders for this vendor:</h3>

    <ol>
    @foreach (Order orders in @Model["orders"])
    {
      <li><a href="/vendors/@Model["vendors"].Id/orders/@orders.Id">@orders.Description</a></li>
    }
    </ol>

    <p><a href='/vendors/@Model["vendors"].Id/orders/new'>Add a new order</a> </p>
    <p><a href='/vendors'>Return to vendor list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
  </div>
</div>