@{
  Layout = "_Layout";
}
<div>
  <nav class="navbar navbar-expand-lg navbar-light">
  <a class="navbar-brand" href="#">Pierre's</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/vendors">Vendors</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Orders</a>
      </li>
  </div>
</div>
<div class="container">
  <div class="jumbotron">
    <h1>Add a new order to @Model.Name</h1>
    <form action="/vendors/@Model.Id/orders" method="post">
      <div class="form-group">
        <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
        <label for="orderTitle">Order Title</label>
        <input id="orderTitle" class="form-control" name="orderTitle" type="text">
      </div>
      <div class="form-group">
        <label for="orderDescription">Order Description</label>
        <input id="orderDescription" class="form-control" name="orderDescription" type="text">
      </div>
      <div class="form-group">
        <label for="orderPrice">Order Price</label>
        <input id="orderPrice" class="form-control" name="orderPrice" type="text">
      </div>
      <div class="form-group">
        <label for="orderDate">Order Date</label>
        <input id="orderDate" class="form-control" name="orderDate" type="text">
      </div>
      <button class="btn btn-primary" type="submit">Submit</button>
    </form>
  </div>
</div>